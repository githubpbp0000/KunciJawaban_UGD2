<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center|start">

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@color/purple_700"
            android:contentDescription="@string/dosen_photo"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nama_dosen"
                style="@style/TextAppearance.MaterialComponents.Headline6"/>

            <TextView
                android:id="@+id/tv_nomor_dosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_180709598"/>

            <TextView
                android:id="@+id/tv_masa_kerja"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/bergabung_sejak_5_tahun_lalu"
                android:gravity="bottom"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>